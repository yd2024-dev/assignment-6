{
    "entryFile": "index.ts", 
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": ["src/**/*.route.ts"], 
    "spec": {
      "specVersion": 2, 
      "outputDirectory": "build", 
      "filePath": "build/swagger.json", 
      "swagger": {
        "basePath": "/api", 
        "schemes": [
          "http"
        ],
        "info": {
          "title": "Bookstore API", 
          "description": "API documentation for a bookstore service", 
          "version": "1.0.0"
        }
      }
    },
    "routes": {
      "routesDir": "build", 
      "middleware": "koa" 
    }
  }
  