{
    "entryFile": "index.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": [
      "src/**/*.route.ts"
    ],
    "spec": {
      "outputDirectory": "build",
      "specVersion": 3,
      "swagger": {
        "basePath": "/api",
        "filePath": "build/openapi.json"  
      }
    },
    "routes": {
      "routesDir": "build",
      "middleware": "koa"
    }
  }
  